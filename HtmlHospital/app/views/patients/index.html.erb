<h2>List of Patients</h2>

<ul>
  <% @patients.each do |patient| %>
    <li>
      <%= link_to patient.lastname, patient_path(patient) %>,
      <%= patient.firstname %> 
      <%= patient.dob %> 
      <%= patient.gender %> 
      <%= link_to "Edit", edit_patient_path(patient) %>
      <%= link_to "Delete", patient_path(patient), method: :delete %>
      <br>
    </li>
  <% end %>  
</ul>

<%= link_to "Add Patient", new_patient_path %>
