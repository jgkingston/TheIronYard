
<div class="col-lg-12">
  <h3>Let's redact a post!</h3>

  <form action="/edit_post/<%= @blogpost.id %>" method="post">

    <input type="hidden" name="_method" value="put">
    <label for="title">Title</label>
    <input type="text" id="title" name="blogpost[title]" value="<%= @blogpost.title %>">
    <br>
    <label for="content">Body</label>
    <textarea type="text" id="content" name='blogpost[content]'><%= @blogpost.content %></textarea>
    <br>
    <input type="hidden" name="blogpost[lastedit]" value="<%= DateTime.now.strftime("Last edited on %m/%d/%Y at %T:%M%p") %>">
    <input type="submit" value="Edit Post">

  </form>
  <br>
  <a href="/">Back</a>
</div>