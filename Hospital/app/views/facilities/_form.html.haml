

%div
= form_for @facility, html: {class: 'validation-form'} do |f|
  - if f.object.errors.messages.length>0
    - f.object.errors.messages.each do | key, value |
      = key.capitalize
      - value.each do |message|
        = message
        %br/
  .form-group.validation-form
    = f.label :name, "Name"
    = f.text_field :name, class: "form-control first-name-input", :autofocus => true
    %p.first.requirement * required field
    %br/
    = f.label :bed, "# of Beds"
    = f.number_field :bed, class: "form-control"
    %br/
    = f.label :description, "Description"
    = f.text_area :description, class: "form-control"
    %br/
    = f.submit "Add Facility", class: 'submit'
